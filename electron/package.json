{
  "name": "website-analyzer-electron",
  "version": "1.0.0",
  "description": "Desktop application for Website Analyzer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "npm run build:frontend && electron-builder",
    "build:frontend": "cd ../frontend && npm run build",
    "dev": "concurrently \"cd ../frontend && npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.cre-art.website-analyzer",
    "productName": "Website Analyzer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "../frontend/build/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "sign": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png",
      "sign": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {}
}
